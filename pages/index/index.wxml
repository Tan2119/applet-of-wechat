<view class="container">
  <!-- 汉堡菜单 -->
  <view class="hamburger" bindtap="toggleSidebar">
    <image src="../../assets/menu.png" class="icon-menu" />
  </view>

  <!-- 侧边栏 -->
  <view class="sidebar" wx:if="{{showSidebar}}">
    <view class="menu-item" bindtap="goToHistory">历史记录</view>
    <view class="menu-item" bindtap="goToFavorites">收藏夹</view>
    <view class="menu-item" bindtap="goToFiles">文件管理</view>
    <view class="menu-item" bindtap="goToSettings">系统设置</view>
  </view>

  <!-- 聊天区域 -->
  <scroll-view scroll-y="true" class="chat-area">
    <block wx:for="{{chatList}}" wx:key="index">
      <view class="chat-item {{item.from === 'user' ? 'user' : 'bot'}}">
        <text>{{item.content}}</text>
      </view>
    </block>
  </scroll-view>

  <!-- 文件上传按钮 -->
  <view class="file-upload">
    <button bindtap="uploadFile">上传文件</button>
  </view>

  <!-- 聊天输入框 -->
  <view class="input-area">
    <input class="text-input" placeholder="请输入问题..." bindinput="onInput" value="{{inputValue}}" />
    <button bindtap="sendMessage">发送</button>
  </view>
</view>
