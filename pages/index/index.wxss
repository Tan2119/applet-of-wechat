.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.hamburger {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 1000;
}

.icon-menu {
  width: 40rpx;
  height: 40rpx;
}

.sidebar {
  position: absolute;
  width: 200rpx;
  top: 0;
  left: 0;
  background-color: #f2f2f2;
  z-index: 999;
  padding: 20rpx;
}

.menu-item {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.chat-area {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
  background-color: #ffffff;
}

.chat-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  max-width: 70%;
}

.chat-item.user {
  align-self: flex-end;
  background-color: #cde8ff;
}

.chat-item.bot {
  align-self: flex-start;
  background-color: #f0f0f0;
}

.file-upload {
  padding: 10rpx;
  text-align: center;
  background: #f9f9f9;
}

.input-area {
  display: flex;
  padding: 10rpx;
  border-top: 1px solid #ddd;
}

.text-input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
