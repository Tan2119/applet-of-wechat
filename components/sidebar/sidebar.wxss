.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  width: 80%;
  height: 100%;
  background: #ffffff;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  z-index: 100;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { transform: translateX(-100%); }
  to { transform: translateX(0); }
}

navigator {
  display: block;
  font-size: 32rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
