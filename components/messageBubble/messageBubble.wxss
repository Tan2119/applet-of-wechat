.message-wrapper {
  display: flex;
  flex-direction: column;
  max-width: 80%;
  margin: 10rpx 0;
}

.left {
  align-self: flex-start;
  color: #000;
}

.right {
  align-self: flex-end;
  color: #fff;
}

.message-bubble {
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  word-break: break-word;
}

.left .message-bubble {
  background-color: #fff;
  border: 1rpx solid #ccc;
  color: #000;
}

.right .message-bubble {
  background-color: #1890ff;
  color: #fff;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
}
