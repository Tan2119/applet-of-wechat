/* 重置默认样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", "PingFang SC", "Microsoft YaHei", sans-serif;
}

button {
  border: none;
  border-radius: 8rpx;
  background-color: #007aff;
  color: white;
  padding: 12rpx 24rpx;
}

input {
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
}

/* 聊天区域统一字体 */
.chat-item text {
  font-size: 28rpx;
  line-height: 40rpx;
}
